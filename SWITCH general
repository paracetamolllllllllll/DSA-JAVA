import java.util.*;

public class Main{
	public static void main(String[] args) {
	    Scanner sc = new Scanner(System.in);
	    
	    System.out.println("enter a number: ");
	    int button = sc.nextInt();
	    
	    switch(button){
	        case 1: System.out.println("this is for 1");
	        break;
	        
	        case 2: System.out.println("this is for 2");
	        break;
	        
	        case 3: System.out.println("this is for 3");
	        break;
	        
	        default: System.out.println("invalid");
	
	    }
	}
}
